			TextInput:
				id: cuenta_eth
				hint_text: 'tu cuenta'
				size_hint: (0.5, 0.05)
				#pos_hint: {'center_x': 0.95, 'center_y': 0.95}
			
			TextInput:
				id: cuenta_destino_eth
				hint_text: 'cuenta destino'
				size_hint: (0.5, 0.05)
				#pos_hint: {'center_x': 0.95, 'center_y': 0.95}
				
			Label: # para hacer espacio
