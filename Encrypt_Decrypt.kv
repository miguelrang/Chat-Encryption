<FChooser>:
	id: fchooser
	name:"fchooser"
	BoxLayout:
		orientation: "vertical"
		size: 100, 200
		padding: 50
		spacing: 20
		Widget:
			Button:
				id: adding
				name: "adding"
				text: "Agregar"
				disabled: True
				size: 490, 40
				opacity: .96
				on_release: app.root.current = "en_de"
				x: 30
				y: 350
			FileChooserIconView:
				id: file_chooser
				size: 500, 350
				on_selection: fchooser.selected(file_chooser.selection)
				y: -5